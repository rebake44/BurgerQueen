<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h2>Burgers that have not been eaten!</h2>

      <ol>
        {{#each burger}}
        {{#unless devoured}}
        {{> burger/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ol>
    </div>

    <div class="col-sm-6">
      <h2>Burgers that have been eaten!</h2>
      <br>

      <ol>
        {{#each burger}}
        {{#if devoured}}
        {{> burger/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ol>
    </div>

    <div class="row">
      <div class="center col-sm-12">
        <h2>Add a Burger</h2>
        <form class="create-form">
          <div class="form-group">
            <input type="text" id="ba" name="name">
          </div>
          <div class="buttonHolder">
            <button type="submit">Add Burger!</button>
        </form>
      </div>
    </div>
  </div>
</div>